<% if field.data.attached? %>
  <%= link_to(url_for(field.data)) do %>
    <% if field.variant? %>
      <%= image_tag field.variant %>
    <% elsif field.preview? %>
      <%= image_tag field.preview %>
    <% else %>
      <%= image_tag field.data.variant({
        combine_options: {
          resize: "64x64^",
          extent: "64x64^",
          gravity: "center",
        },
      }) %>
    <% end %>
  <% end %>
<% end %>
